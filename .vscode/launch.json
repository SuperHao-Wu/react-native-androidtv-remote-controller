{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Program",
			"skipFiles": ["<node_internals>/**"],
			"program": "${file}"
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Jest Tests",
			"port": 9229,
			"address": "localhost",
			"localRoot": "${workspaceFolder}",
			"remoteRoot": null,
			"skipFiles": ["<node_internals>/**"],
			"sourceMaps": true,
			"trace": true
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Appium/WDIO Tests",
			"port": 9230,
			"address": "localhost",
			"localRoot": "${workspaceFolder}",
			"remoteRoot": null,
			"skipFiles": ["<node_internals>/**"],
			"sourceMaps": true,
			"trace": true
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to React Native Metro",
			"port": 8081,
			"address": "localhost",
			"localRoot": "${workspaceFolder}",
			"remoteRoot": null,
			"skipFiles": ["<node_internals>/**"]
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Mock Server",
			"port": 9231,
			"address": "localhost",
			"localRoot": "${workspaceFolder}",
			"remoteRoot": null,
			"skipFiles": ["<node_internals>/**"],
			"sourceMaps": true
		}
	]
}
